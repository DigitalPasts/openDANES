---
layout: none
---
[
  {% for page in site.pages %}
    {% assign author_names = '' | split: '' %}
    {% for author in page.authors %}
      {% assign author_name = author[1].name | split: ", " %}
      {% assign author_names = author_names | concat: author_name %}
    {% endfor %}
    {
      "title"    : "{{ page.title | escape }}",
      "authors" : "{{ author_names | join: ', ' }}",
      "tags"     : "{{ page.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ page.url }}",
      "date"     : "{{ page.date }}",
      "type"     : "{{ page.type }}",
      "summary"     : "{{ page.summary }}",
      "content"     : "{{ page.content | markdownify | strip_html | strip_newlines | escape }}",
      "snippet"     : "{{ page.content | markdownify | strip_html | strip_newlines | remove_chars | escape | truncate: 200 }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]